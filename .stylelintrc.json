{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-clean-order",
        "stylelint-config-standard-scss"
    ],
    "rules": {
        "unit-allowed-list": ["em", "rem", "px", "%", "vh", "fr", "s", "ms"],
        "block-no-empty": true,
        "no-empty-source": null,
        "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$|^[a-z][a-zA-Z0-9]+$"
    }
}
